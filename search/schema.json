{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "asciifolding",
            "lowercase",
            "kstem"
          ]
        },
        "path_analyzer": {
          "type": "custom",
          "tokenizer": "path_tokenizer"
        },
        "edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": [
            "asciifolding",
            "lowercase"
          ]
        }
      },
      "tokenizer": {
        "path_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "|"
        },
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 12,
          "token_chars": [
            "letter",
            "digit",
            "punctuation"
          ]
        }
      }
    }
  },
  "mappings": {
    "page": {
      "properties": {
        "num": {
          "type": "text",
          "analyzer": "edge_ngram_analyzer",
          "search_analyzer": "text_analyzer",
          "store": true,
          "boost": 100,
          "index": true
        },
        "title": {
          "term_vector": "with_positions_offsets",
          "index": true,
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true,
          "boost": 5
        },
        "body": {
          "term_vector": "with_positions_offsets",
          "index": true,
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true
        },
        "url": {
          "type": "text",
          "index": false,
          "store": true
        },
        "path": {
          "type": "text",
          "analyzer": "path_analyzer",
          "search_analyzer": "path_analyzer",
          "index": true
        },
        "ref_doc": {
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true,
          "index": false
        },
        "doc_cite": {
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true,
          "index": false
        }
      }
    }
  }
}
